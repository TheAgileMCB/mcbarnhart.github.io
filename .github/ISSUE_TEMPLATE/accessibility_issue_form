name: Accessibility Issue
description: Document an accessibility issue and any actions taken to correct it
title: "*[BUG] <title>"
body:
- type: input
  id: jira_ticket
  attributes:
    label: Jira ticket number
    description: How many unique site URLs are impacted by the Problem?
  validations:
    required: false
- type: markdown
  attributes:
    value: "## Problem Overview"
- type: textarea
  id: problem
  attributes:
    label: Problem
    description: How does this issue negatively impact site accessibility?
  validations:
    required: true
- type: textarea
  id: targets
  attributes:
    label: Target(s)
    description: Specific code elements or attributes affected by the Problem
  validations:
    required: true
- type: input
  id: prevalence
  attributes:
    label: Number of URLS affected
    description: How many unique site URLs are impacted by the Problem?
  validations:
    required: false
- type: textarea
  id: examples
  attributes:
    label: Examples of affected URL(s)
  validations:
    required: true
- type: textarea
  id: recommended_correction
  attributes:
    label: Recommended correction
    description: Recommended corrective action to be taken.
  validations:
    required: true
- type: textarea
  id: code_to_change
  attributes:
    label: Link to code to change
    description: Specific code elements or attributes affected by the Problem
  validations:
    required: true
- type: markdown
  attributes:
    value: "## Change Overview" 
- type: textarea
  id: visual_observation
  attributes:
    label: Visual
    description: Visual evidence of recommended change. (May include images)
  validations:
    required: false
- type: textarea
  id: markup_observation
  attributes:
    label: Markup
    description: Markup evidence of recommended change. (May include images)
  validations:
    required: false
